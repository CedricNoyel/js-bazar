{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "rules" : {
        "linebreak-style": 0,
        "global-require": 0,
        "no-console": "off",
        "eslint linebreak-style": [0, "error", "windows"]
    }
}